{
  "name": "dev-utils",
  "version": "1.0.0",
  "description": "Web-based script runner for developer utilities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:web\" -n \"server,web\" -c \"blue,magenta\"",
    "dev:server": "bun run --watch server/index.ts",
    "dev:web": "cd web && bun run dev",
    "start": "bun run server/index.ts",
    "build": "cd web && bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  }
}
